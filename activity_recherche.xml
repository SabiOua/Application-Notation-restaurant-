<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sabrina.projet.Recherche">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rechercher un Restaurant"
            android:textSize="30dp"
            android:textColor="#008000"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/nomClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom :"
            android:textSize="20dp"
            android:textColor="#000000"
            android:clickable="true"
            android:onClick="rechercher"/>
    <EditText
        android:id="@+id/nom"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/heureClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heure d'Ouverture :"
                android:textSize="20dp"
                android:textColor="#000000"
                android:clickable="true"
                android:onClick="rechercher"/>
            <EditText
                android:id="@+id/heure"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="12"
                android:visibility="invisible"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/typeClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type Cuisine :"
                android:textSize="20dp"
                android:textColor="#000000"
                android:clickable="true"
                android:onClick="rechercher"/>
            <EditText
                android:id="@+id/type"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/adresseClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adresse :"
                android:textSize="20dp"
                android:textColor="#000000"
                android:clickable="true"
                android:onClick="rechercher"/>
            <EditText
                android:id="@+id/adr"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/codePostalClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Code Postal :"
                android:textSize="20dp"
                android:textColor="#000000"
                android:clickable="true"
                android:onClick="rechercher"
                />
            <EditText
                android:id="@+id/Cp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/jourClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jour Ouverture :"
                android:textSize="20dp"
                android:textColor="#000000"
                android:clickable="true"
                android:onClick="rechercher"
               />
            <EditText
                android:id="@+id/jour"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="lundi-vendredi"
                android:visibility="invisible"/>
        </LinearLayout>
        <Button
            android:id="@+id/valider"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Valider"
            android:onClick="rech"
            android:layout_gravity="center_horizontal"
            android:layout_margin="30dp"/>
    </LinearLayout>


</RelativeLayout>

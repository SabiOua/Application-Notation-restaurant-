<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sabrina.projet.Ajouter">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajout de Restaurant"
            android:textSize="25dp"
            android:textColor="#008000"
            android:layout_gravity="center"
           />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Nom du Restaurant:* "
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>
            <EditText
                android:layout_marginLeft="50dp"
                android:id="@+id/nom"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Adresse: *"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>
            <EditText
                android:layout_marginLeft="125dp"
                android:id="@+id/adresse"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Code Postal :* "
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>
            <EditText
                android:layout_marginLeft="105dp"
                android:id="@+id/cp"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Ville: *"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>
            <EditText
                android:layout_marginLeft="150dp"
                android:id="@+id/ville"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Numero de Telepehone: "
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                />
            <EditText
                android:layout_marginLeft="25dp"
                android:id="@+id/numTel"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="00 00 00 00 00"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Site Web : "
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>
            <EditText
                android:layout_marginLeft="120dp"
                android:id="@+id/sw"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Jours d'Ouverture : "
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                />
            <EditText
                android:layout_marginLeft="60dp"
                android:id="@+id/JOu"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="lundi-vendredi"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Heures d'Ouverture : "
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                />
            <EditText
                android:layout_marginLeft="50dp"
                android:id="@+id/HOu"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="12:00-20:00"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Types de Cuisine : "
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>
            <EditText
                android:layout_marginLeft="70dp"
                android:id="@+id/TC"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp">
            <TextView
                android:text="Note Globale : "
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:hint="maximum 5"/>
            <EditText
                android:layout_marginLeft="80dp"
                android:id="@+id/etoile"
                android:layout_width="140dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp">
            <TextView
                android:text="Note Employes : "
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:hint="maximum 5"/>
            <EditText
                android:layout_marginLeft="80dp"
                android:id="@+id/employe"
                android:layout_width="140dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp">
            <TextView
                android:text="Note service : "
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:hint="maximum 5"/>
            <EditText
                android:layout_marginLeft="80dp"
                android:id="@+id/service"
                android:layout_width="140dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp">
            <TextView
                android:text="Note Nourriture : "
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:hint="maximum 5"/>
            <EditText
                android:layout_marginLeft="80dp"
                android:id="@+id/nourriture"
                android:layout_width="140dp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="50dp">
                <TextView
                    android:text="Note Hygiene : "
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:hint="maximum 5"/>
                <EditText
                    android:layout_marginLeft="80dp"
                    android:id="@+id/hygiene"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    <Button
        android:layout_gravity="center_horizontal"
        android:text="enter"
        android:id="@+id/bouton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="add" />
   </LinearLayout>
    </ScrollView>

</RelativeLayout>
